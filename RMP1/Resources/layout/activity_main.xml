        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2">
        <include
        layout="@layout/Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/> 
    </LinearLayout>

 </LinearLayout>